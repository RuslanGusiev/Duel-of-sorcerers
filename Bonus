import numpy as np

POWER = {
   'Fireball': 50,
   'Lightning bolt': 40,
   'Magic arrow': 10,
   'Black Tentacles': 25,
   'Contagion': 45
}
gandalf = ['Fireball', 'Lightning bolt', 'Lightning bolt', 'Magic arrow', 'Fireball',
          'Magic arrow', 'Lightning bolt', 'Fireball', 'Fireball', 'Fireball']
saruman = ['Contagion', 'Contagion', 'Black Tentacles', 'Fireball', 'Black Tentacles',
          'Lightning bolt', 'Magic arrow', 'Contagion', 'Magic arrow', 'Magic arrow']
gandalf_win = 0
saruman_win = 0
gandalf_value = 0
saruman_value = 0
gandalf_list = []
saruman_list = []
for i in range(len(gandalf)):
    for name, value in POWER.items():
        if gandalf[i] == name:
            gandalf_value = value
        if saruman[i] == name:
            saruman_value = value           
    if gandalf_value > saruman_value:
        gandalf_win += 1
        saruman_win = 0
    elif gandalf_value < saruman_value:
        saruman_win += 1
        gandalf_win = 0
    else:
        continue
    if gandalf_win == 3:
        print('Gandalf won!')
        break
    if saruman_win == 3:
        print('Saruman won')
        break
for i in range(len(gandalf)):
    for name, value in POWER.items():
        if gandalf[i] == name:
            gandalf_value = value
        if saruman[i] == name:
            saruman_value = value            
    gandalf_list.append(gandalf_value)
    saruman_list.append(saruman_value)
print('Average Gandalf = ', np.mean(gandalf_list))
print('Standard Deviation Gandalf = ', np.std(gandalf_list))
print('Average Saruman = ', np.mean( saruman_list))
print('Standard Deviation Saruman = ', np.std( saruman_list))    
